<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>

			<h2>New book</h2>
			<%= render 'books/form', book: @books %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
					<tr>
						<td>
							<%= link_to user_path(@book.user) do %>
								<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, book_path(@book) %></td>
						<td><%= @book.body %></td>
						<td>コメント数：<%= @book.post_comments.count %></td>
						<% if @book.user_id == current_user.id %>
							<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
							<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
						<% end %>
					</tr>
			</table>


				<% @book.post_comments.each do |post_comment| %>
			  	<div class="comment">
			  		<%= link_to user_path(post_comment.user) do %>
			   	 		<%= attachment_image_tag post_comment.user, :profile_image, format: 'jpg', fallback: "no-image-mini.jpg", size: "40x40" %><br>
				      	<%= post_comment.user.name %>
			  		<% end %>
			  	 	<%= post_comment.comment %>
			      <% if post_comment.user == current_user%>
			    	<%= link_to "destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
				  <% end %>
				</div>
				<% end %>



			<%= form_with(model:[@book, @post_comment], local: true) do |f| %>
				<% if @book.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
				      <ul>
				        <% @book.errors.full_messages.each do |messages| %>
				          <li><%= messages %></li>
				        <% end %>
				      </ul>
				    </div>
			  	<% end %>
				<%= f.text_area :comment, size: "110x10" %>
				<%= f.submit "送信" %>
			<% end %>



		</div>
	</div>
</div>

